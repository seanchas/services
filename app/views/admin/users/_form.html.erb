<%- semantic_form_for [:admin, @user] do |form| -%>

    <%- form.inputs do -%>
        <%= form.input :roles, :as => :check_boxes %>
    <%- end -%>
    
    <%- form.buttons do -%>
        <%= form.commit_button :label => form.object.new_record? ? t(".create") : t(".update") %>
        <%= content_tag :span, t(".or"), :class => :or %>
        <%= link_to t(".cancel"), [:admin, :users], :class => :cancel %>
    <%- end -%>

<%- end -%>