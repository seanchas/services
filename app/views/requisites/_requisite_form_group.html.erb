<h2>
    <%= h group.title %>
</h2>

<div class="split">
    <div class="sidebar">
        <%= render "shared/required_fields" if requisite_form_group_counter == 0 %>
    </div>
    
    <div class="content">
        <div class="frame">
            <dl>
                <%- group.elements.each do |element| -%>
                    <%- content_tag :dt, :class => @requisite.errors[element.id].empty? ? nil : :error do -%>
                        <%= f.label element.id, element.label %>
                    <%- end -%>
                    <dd>
                        <%= f.send element.value.tag, element.id, element.value.options_for_tag %>
                        <%= content_tag :span, "*", :class => :asterisk if element.required? %>
                        <%- if element.hint? -%>
                            <em>
                                <%= h element.hint %>
                            </em>
                        <%- end -%>
                    </dd>
                <%- end -%>
            </dl>
        </div>
    </div>
</div>
