<h2>
    <%= h @requisite.requisite_type.name %>
</h2>

<%- form_for @requisite, :url => :requisite, :html => { :class => :requisite } do |f| -%>

    <%= f.error_messages :header_message => nil, :message => nil, :class => :errors, :id => :requisite_form_errors %>

    <%= render :partial => "requisite_form_group", :collection => @requisite.form.groups, :as => :group, :locals => { :f => f } %>

    <dl>
        <dd class="submit">
            <%= f.submit t(".commit"), :id => nil, :name => nil %>
        </dd>
    </dl>

<%- end -%>
