<div id="totals_wrapper" class="wrapper">
    <span class="total">
        <%= t ".total" %>: <span id="totals_total"><%= number_to_currency @order.total, :unit => "" %> <%=  t(@order.service.currency, :scope => [:currency, :short]) %></span>
    </span>
    <%- content_tag :span, :class => :discount, :style => @order.discount == 0 ? "display: none;" : nil do -%>
        (<%= t ".discount" %>: <span id="totals_discount"><%= number_to_currency @order.discount, :unit => t(@order.service.currency, :scope => [:currency, :short]) + " " %></span>)
    <%- end -%>
</div>
